{
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "Node",
    "target": "ES6",
    "outDir": "./dist",
    "sourceMap": true,
    "lib": ["dom", "ES2020"],
    "removeComments": true,
    "esModuleInterop": true,
    // strict checks
    "strict": true,
    // linter checks
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/*.test.js",
    "./src/**/*.test.js"
  ]
}
